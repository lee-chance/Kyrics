<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chancestudio.newkpop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_id"/>

        <activity android:name="com.chancestudio.newkpop.ManagerActivity" />
        <activity android:name="com.chancestudio.newkpop.PostActivity" />
        <activity android:name="com.chancestudio.newkpop.NoticeActivity" />
        <activity android:name="com.chancestudio.newkpop.AccountActivity" />
        <activity android:name="com.chancestudio.newkpop.FavoriteActivity" />
        <activity android:name="com.chancestudio.newkpop.SettingActivity" />
        <activity android:name="com.chancestudio.newkpop.MainActivity" />
        <activity android:name="com.chancestudio.newkpop.ContentsActivity" />
        <activity
            android:name="com.chancestudio.newkpop.Popup.LoadingDialog"
            android:theme="@style/MyDialog"/>
        <activity
            android:name="com.chancestudio.newkpop.Popup.NicknamePopup"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.chancestudio.newkpop.Popup.RequestPopup"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.chancestudio.newkpop.Popup.LoginPopup"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.chancestudio.newkpop.ReportActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.chancestudio.newkpop.SearchActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.chancestudio.newkpop.RegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.chancestudio.newkpop.InputActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.chancestudio.newkpop.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>